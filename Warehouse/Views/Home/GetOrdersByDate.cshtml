@model Warehouse.Models.OrdersListModel

<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Orders</h2>
    </div>

    <div class="col-12 border p-3">
        <table class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Order Date</th>
                    <th>Customer Name</th>
                    <th>Customer Address</th>
                    <th>Customer Phone</th>
                    <th>Departure Date</th>
                    <th>Delivery Method</th>
                    <th>Volume</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var asset in @Model.Assets)
                {
                    <tr>
                        <td>@asset.Product</td>
                        <td>@asset.OrderDate</td>
                        <td>@asset.CustomerName</td>
                        <td>@asset.CustomerAddress</td>
                        <td>@asset.CustomerPhone</td>
                        <td>@asset.DepartureDate</td>
                        <td>@asset.DeliveryMethod</td>
                        <td>@asset.Volume</td>
                        <td>@asset.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="d-flex justify-content-start col-12">
        <h4 class="text-info">Average price: @Model.AveragePrice</h4>
    </div>
    <div class="d-flex justify-content-end col-12">
        <div class="col-3">
            <a asp-action="Index" class="btn btn-success form-control">Back</a>
        </div>
    </div>
</div>

