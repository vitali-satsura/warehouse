@model Warehouse.Models.EmployeeListModel

<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Employees</h2>
    </div>

    <div class="col-12 border p-3">
        <table class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Passport</th>
                    <th>Position</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var asset in @Model.Assets)
                {
                    <tr>
                        <td>@asset.Name</td>
                        <td>@asset.Age</td>
                        <td>@asset.Gender</td>
                        <td>@asset.Address</td>
                        <td>@asset.Phone</td>
                        <td>@asset.PassportData</td>
                        <td>@asset.PositionName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>   
    <div class="d-flex justify-content-end col-12">
        <div class="col-3">
            <a asp-action="Index" class="btn btn-success form-control">Back</a>
        </div>
    </div>    
</div>


